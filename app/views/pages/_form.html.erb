<table summary="Page form fields">
    
    <tr>
        <th><%= p.label(:subject_id, "Subject ID") %></th>
        <td><%= p.select(:subject_id, @subjects.map {|s|  [s.name, s.id] }) %></td>
    </tr>

    <tr>
        <th><%= p.label(:name, "Name") %></th>
        <td><%= p.text_field(:name) %></td>
    </tr>
    <tr>
        <th><%= p.label(:permalink) %></th>
        <td><%= p.text_field(:permalink) %></td>
    </tr>
    <tr>
        <th><%= p.label(:position) %></th>
        <td><%= p.select(:position, 1..@page_count) %></td>
    </tr>
    <tr>
        <th><%= p.label(:visible) %></th>
        <td><%= p.check_box(:visible) %></td>
    </tr>
</table>