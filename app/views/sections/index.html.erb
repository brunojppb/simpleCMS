    <div class="section index">
        <h2>Pages</h2>
        <%= link_to("Add new Section",  {:action => 'new'}, :class => 'action new') %>

        <table class="listing" summary="Section list">
            <tr class="header">
                <th>&nbsp;</th>
                <th>Section</th>
                <th>Visible</th>
                <th>Content Type</th>
                <th>Content</th>
                <th>Page</th>
                <th>Actions</th>
            </tr>
            <%@sections.each do |s|%>
            <tr>
                <td class="center"><%= s.position %></td>
                <td class="center"><%= s.name %></td>
                <td class="center"><%= s.visible ? 'Yes' : 'No' %></td>
                <td class="center"><%= s.content_type %></td>
                <td class="center"><%= s.content %></td>
                <% if s.page != nil %>
                <td class="center"><%= s.page.name %></td>
                <% else %>
                <td class="center">No page</td>
                <% end %>

                <td class="actions">
                    <%= link_to("Show", {:action => 'show', :id => s.id }, :class => 'action show') %>
                    <%= link_to("Edit", {:action => 'edit', :id => s.id }, :class => 'action edit') %>
                    <%= link_to("Delete", {:action => 'delete', :id => s.id }, :class => 'action delete') %>
                </td>
            </tr>
            <%end%>
        </table>
    </div>